<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="co.cyte.agent.frontend.ui.controllers.MainController">
    <items>
        <!-- ListView para mostrar carpetas -->
        <ListView fx:id="folderListView" onMouseClicked="#onFolderSelected"/>

        <!-- Panel derecho con botones -->
        <VBox spacing="10" alignment="CENTER">
            <Button fx:id="lockButton" text="Lock" onAction="#onLockClicked" disable="true"/>
            <Button fx:id="unlockButton" text="Unlock" onAction="#onUnlockClicked" disable="true"/>
        </VBox>
    </items>
</SplitPane>
